<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DeptAddServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.DeptAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptDeleteServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.DeptDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptFindByIdServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.DeptFindByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptFindServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.DeptFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptUpdateServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.DeptUpdateServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DeptAddServlet</servlet-name>
        <url-pattern>/dept/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptDeleteServlet</servlet-name>
        <url-pattern>/dept/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptFindByIdServlet</servlet-name>
        <url-pattern>/dept/findById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptFindServlet</servlet-name>
        <url-pattern>/dept/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptUpdateServlet</servlet-name>
        <url-pattern>/dept/update</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
</web-app>